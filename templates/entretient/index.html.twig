{% extends 'Backbase.html.twig' %}
{% block title %}Entretient index{% endblock %}

{% block body %}
    <h1>Entretient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Type</th>
                <th>Resultat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entretient in entretients %}
            <tr>
                <td>{{ entretient.id }}</td>
                <td>{{ entretient.date ? entretient.date|date('Y-m-d') : '' }}</td>
                <td>{{ entretient.type }}</td>
                <td>{{ entretient.resultat }}</td>
                <td>
                    <a href="{{ path('app_entretient_show', {'id': entretient.id}) }}">show</a>
                    <a href="{{ path('app_entretient_edit', {'id': entretient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_entretient_new') }}">Create new</a>
{% endblock %}
